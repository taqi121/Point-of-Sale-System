
@{
    ViewBag.Title = "NewBrand";
    Layout = "~/Views/Shared/_AdminSharedView.cshtml";
}

<div style="margin-left:3%">
    <form class="form">
        <div class="col-md-12 form-row">
            <div class="form-group col-md-12">
                <label>Add New Brand</label>
            </div>
        </div>
        <div class="form-row col-md-12">
            <div class="form-group col-md-12">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Name..." name="name" required>
            </div>
        </div>
        <div class="form-group col-md-12">
            <label for="txtarea">Description</label>
            <textarea cols="60" rows="5" id="txtarea" name="txtarea" placeholder="Comments" class="form-control"></textarea>
        </div>
        <div class="br-right-30 col-md-12">
            <button type="submit" class="btn btn-primary mt-3">Save</button>
            <button type="submit" class="btn btn-danger mt-3">Reset</button>
        </div>
    </form>
</div>